<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">


        <TextView
            android:id="@+id/image_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="10dp"
            android:text="title"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/image_list_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_list_title"
            android:layout_alignStart="@+id/image_list_title"
            android:text="description"
            android:textSize="20dp"
            android:textStyle="italic" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_launcher_info_icon"
            android:id="@+id/image_list_info"
            android:layout_alignParentRight="true"
            />


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>